<div class="contact-section">
  <div class="container">
    <%= form_for :recipes, url: "/receita/#{params[:recipe_id]}" do |f| %>
      <div class="col-md-6 form-line">
          <div class="form-group">
            <%= f.label :"Nome:" %><br />
            <%= f.text_field :title, :placeholder => "Nome da receita", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :"Serve:" %><br />
            <%= f.number_field :served_people, :placeholder => "Quantidade de pessoas", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :"Tempo de preparo:" %><br />
            <%= f.number_field :prepare_time, :placeholder => "Tempo de preparo em minutos", class: "form-control" %>
          </div>
          <div class="form-group">
            <label for="Image">Foto da receita</label>
            <%= f.file_field :image_one, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :"Modo de preparo:" %><br />
            <%= f.text_area :text, :placeholder => "Descreva o modo de preparo", class: "form-control", rows: "12" %>
          </div>
          <div>
            <%= f.submit "Salvar receita", class: "btn btn-default submit" %>
          </div>
      </div>
    <% end %>
  </div>
</div>
