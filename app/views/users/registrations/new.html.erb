<div class="row">
  <div class="col-md-offset-3">

    <h2>Criar Conta</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

        <div class="row">
          <div class="col-md-3">
            <div class="field">
              <%= f.label :"Nome" %><br />
              <%= f.text_field :first_name, autofocus: true, :placeholder => "John Doe" %>
            </div>
          </div>

          <div class="col-md-3">
            <div class="field">
              <%= f.label :"Sobrenome" %><br />
              <%= f.text_field :last_name, autofocus: "off", :placeholder => "Smith" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <div class="field">
              <%= f.label :"E-mail" %><br />
              <%= f.email_field :email, autofocus: "off", :placeholder => "email@example.com" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-3">
            <div class="field">
              <%= f.label :"Senha" %>
              <% if @minimum_password_length %>
              <em>(mínimo de <%= @minimum_password_length %> caracteres)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", :placeholder => "******" %>
            </div>
          </div>

          <div class="col-md-3">
            <div class="field">
              <%= f.label :"Confirmar senha" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "******" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-3">
            <div class="field">
              <%= f.label :"Nome de usuário" %><br />
              <%= f.text_field :username, autofocus: "off", :placeholder => "john_doe" %>
            </div>
          </div>

          <div class="col-md-3">
            <div class="field">
              <%= f.label :"Foto" %><br />
              <%= f.file_field :avatar %>
            </div>
          </div>
        </div>

        <br>

        <div class="actions">
          <%= f.submit "Confirmar" %>
        </div>
    <% end %>

  </div>
</div>

<br><%= render "users/shared/links" %>
