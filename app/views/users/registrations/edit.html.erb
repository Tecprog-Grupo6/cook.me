<!DOCTYPE html>
<title>Cook.me | Editar Perfil</title>
<div class="container">
  <div class="row">
    <div class="col-sm-10 col-md-offset-1">
      <center>
        <div class="section-content">
      		<h1 class="content-header">Editar <span class="yellow"> Perfil</span></h1>
      	</div>
      </center>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="row">
        <div class="col-md-3">
          <center>
            <%= f.label :"Foto de perfil atual" %><br>
            <%= image_tag(@user.avatar.url(:thumb), class:"img-responsive") %>
          </center>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-6 form-line">
          <div class="form-group">
            <%= f.label :"Nome" %><br>
            <%= f.text_field :first_name, autofocus: true, class: "form-control", :placeholder => "John" %>
          </div>
          <div class="form-group">
            <%= f.label :"Sobrenome" %><br>
            <%= f.text_field :last_name, autofocus: "off", class: "form-control", :placeholder => "Doe" %>
          </div>
          <div class="form-group">
            <%= f.label :"Email" %><br>
            <%= f.email_field :email, autofocus: "off", class: "form-control", :placeholder => "exemplo@email.com" %>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :"Sexo" %><br>
              <%= f.select :gender, [['Masculino', "Masculino"], ['Feminino', "Feminino"]], class: "form-control", :placeholder => "Masculino" %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :"Foto" %><br>
              <%= f.file_field :avatar %>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :"Data de Nascimento" %><br>
            <%= f.date_field :birthday, class: "form-control", :placeholder => "21/02/1994" %>
          </div>
          <div class="form-group">
            <%= f.label :"Senha" %><i> (deixe em branco caso não queira alterar)</i><br>
            <%= f.password_field :password, autocomplete: "off", class: "form-control", :placeholder => "********" %>
          </div>
          <div class="form-group">
            <%= f.label :"Confirmar senha" %><i> (deixe em branco caso não queira alterar)</i><br>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", :placeholder => "********" %>
          </div>
          <div class="form-group">
            <%= f.label :"Senha atual" %> <i>(necessário para confirmar alterações)</i><br>
            <%= f.password_field :current_password, class: "form-control", autocomplete: "off", :placeholder => "********" %>
          </div>
        </div>
      </div>
      <br>
      <div class="row">
        <!--<div class="col-md-6">
          <%= f.label :"Cancelar minha conta" %><br>
          <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Você tem certeza?" }, method: :delete, class: "btn btn-default" %>
        </div>
        <br>-->
        <div class="col-md-12">
          <div class="actions">
            <%= f.submit "Confirmar Edição", class: "btn btn-default submit" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
