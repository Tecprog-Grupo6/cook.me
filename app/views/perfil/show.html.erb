<div class="container">
    <div class="row profile">
		<div class="col-md-3">
			<div class="profile-sidebar">
				<!-- SIDEBAR USERPIC -->
				<div class="profile-userpic">
					<%= image_tag(@user.avatar.url, class:"img-responsive", alt:"") %>
				</div>
				<!-- END SIDEBAR USERPIC -->
				<!-- SIDEBAR USER TITLE -->
				<div class="profile-usertitle">
					<div class="profile-usertitle-name">
						<%= @user.first_name %> <%= @user.last_name %>
					</div>
					<div class="profile-usertitle-job">
						Mestre-cuca
					</div>
				</div>
				<!-- END SIDEBAR USER TITLE -->
				<!-- SIDEBAR BUTTONS -->
				<div class="profile-userbuttons">
					<button type="button" class="btn btn-success btn-sm">Seguir</button>
				</div>
				<!-- END SIDEBAR BUTTONS -->
				<!-- SIDEBAR MENU -->
				<div class="profile-usermenu">
					<ul class="nav">
						<li>
							<a href="#estatisticas">
							<i class="glyphicon glyphicon-stats"></i>
							Estatísticas </a>
						</li>
						<li>
							<a href="#cookbook">
							<i class="glyphicon glyphicon-book"></i>
							Cookbook </a>
						</li>
					</ul>
				</div>
				<!-- END MENU -->
			</div>
		</div>
		<div class="col-md-9">
      <div class="profile-statistics" id="estatisticas">
        <div class="title-session">Estatísticas</div>
      </div>
      <br>
      <div class="profile-cookbook" id="cookbook">
        <div class="title-session">Cookbook</div>
      </div>
		</div>
	</div>
</div>
<br>
