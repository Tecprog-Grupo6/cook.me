<style>
  .nav-pills > li > a {
    border-radius: 4px 4px 0 0 ;
  }

  .tab-content {
    color : white;
    background-color: #ff8533;
    padding : 5px 15px;
    border-radius: 0 0 8px 8px ;
  }

  .nav-pills > li.active > a, .nav-pills > li.active > a:focus {
    color: black;
    background-color: #ff8533;
  }
  .center {
    text-align: center;
  }

  body {
    background-color: #f7f7f7;
  }
</style>

<div class="container"><h2>Busca</h2></div>
<div class="container">
  <ul  class="nav nav-pills">
		<li class="active">
      <a  href="#recipes" data-toggle="tab">Receitas</a>
		</li>
		<li><a href="#ingredients" data-toggle="tab">Ingredientes</a>
		</li>
		<li><a href="#users" data-toggle="tab">Usuários</a>
		</li>
	</ul>
	<div class="tab-content clearfix">
	  <div class="tab-pane center active" id="recipes">
      <h3>Receitas</h3>
      <p>Cadê as receitas?</p>
		</div>
		  <div class="tab-pane center" id="ingredients">
        <h3>Ingredientes</h3>
        <p>Cadê os ingredientes?</p>
      </div>
    <div class="tab-pane center" id="users">
      <% if @query_users != [] %>
        <% if @query_users != nil %>
          <% @query_users.each do |user| %>
            <h4>Nome: <%= user.name %> <%= user.last_name %></h4>
            <h4>E-mail: <%= user.email %></h4>
          <% end %>
        <% else %>
          <h3>Pesquise por um usuário <b> ;)</b> </h3>
        <% end %>
      <% else %>
        <h4>Nenhum usuário encontrado</h4>
      <% end %>
      <br>
		</div>
	</div>
</div>
